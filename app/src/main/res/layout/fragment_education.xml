<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.fragments.EducationFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/education_Heading"
            android:textSize="34sp"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView4"/>
    <ImageView
            android:src="@mipmap/ic_university"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/institutionNameTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:src="@mipmap/ic_location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/locationImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/institutionLocationTextView"
            app:layout_constraintStart_toEndOf="@+id/locationImageView"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/locationImageView"
            app:layout_constraintBottom_toBottomOf="@+id/locationImageView"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:src="@mipmap/ic_radar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/areaOfStudyImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/locationImageView"/>
    <ImageView
            android:src="@mipmap/ic_start_date"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:id="@+id/startDateImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/areaOfStudyImageView"/>
    <ImageView
            android:src="@mipmap/ic_start_date"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:id="@+id/endDateImageView"
            app:layout_constraintStart_toEndOf="@+id/startDateTextView"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="@+id/startDateImageView"
            app:layout_constraintBottom_toBottomOf="@+id/startDateImageView"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDateTextView"
            app:layout_constraintStart_toEndOf="@+id/startDateImageView"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/startDateImageView"
            app:layout_constraintBottom_toBottomOf="@+id/startDateImageView"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endDateTextView"
            app:layout_constraintStart_toEndOf="@+id/endDateImageView"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/endDateImageView"
            app:layout_constraintBottom_toBottomOf="@+id/endDateImageView"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/areaOfStudyTextView"
            app:layout_constraintTop_toTopOf="@+id/areaOfStudyImageView"
            app:layout_constraintBottom_toBottomOf="@+id/areaOfStudyImageView"
            app:layout_constraintStart_toEndOf="@+id/areaOfStudyImageView"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>